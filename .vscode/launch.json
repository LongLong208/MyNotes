    "version": "0.2.0",
    "configurations": [
        {
            "name": "c++",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "cmd",
            "args": [
                "/C",
                "g++",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}",
                "${fileDirname}\\${fileBasenameNoExtension}.cpp",
                "&",
                "pause",
                "&",
                "cls",
                "&",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        },
    ]
}
